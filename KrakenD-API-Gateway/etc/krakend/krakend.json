{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "timeout": "3s",
  "cache_ttl": "300s",
  "port": 8080,
  "endpoints": [
    {
      "endpoint": "/date",
      "method": "GET",
      "extra_config": {
        "qos/ratelimit/router": {
          "max_rate": 5000
        }
      },
      "backend": [
        {
          "url_pattern": "/date",
          "host": ["YOUR IP:3001"],
          "allow": ["formattedWeekday"],
          "encoding": "json",
          "extra_config": {
            "backend/http": {
              "return_error_details": "backend_alias"
            }
          }
        }
      ]
    },
    {
      "endpoint": "/post",
      "method": "POST",
      "extra_config": {
        "qos/ratelimit/router": {
          "max_rate": 5000
        }
      },
      "backend": [
        {
          "url_pattern": "/greeting",
          "host": ["172.20.10.2:3001"],
          "encoding": "string",
          "extra_config": {
            "backend/http": {
              "return_error_details": "backend_alias"
            }
          }
        }
      ]
    },
    {
      "@comment": "Feature: Mocked response",
      "endpoint": "/mocked-response",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        { "host": ["http://unexistent_backend"], "url_pattern": "/" }
      ],
      "extra_config": {
        "proxy": {
          "static": {
            "data": {
              "prices": ["10000", "20000"]
            },
            "strategy": "always"
          }
        }
      }
    }
  ]
}
